{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
